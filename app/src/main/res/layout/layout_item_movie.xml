<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:elevation="2dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:id="@+id/rel_card"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_moviethumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/iv_play"
                android:layout_toRightOf="@+id/iv_moviethumbnail"
                android:maxLines="3"
                android:minLines="1" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_play_arrow_black_48dp" />


                <TextView
                    android:id="@+id/tv_date_movie"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/tv_name_movie"
                    android:layout_below="@+id/iv_moviethumbnail"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    />

            <TextView
                android:id="@+id/tv_type_movie"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/tv_name_movie"
                android:layout_below="@+id/iv_play"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="(U/A)"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>